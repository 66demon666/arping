program ArpPing;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  SysUtils,
  TPcapClass,
  PcapUtils,
  PcapExceptions;

const
  IF_ID = '\Device\NPF_{077C8EF5-CB84-4C34-9C2A-66006D41D835}';
  IF_ID_2 = '\Device\NPF_{9C22769D-724A-4B92-814A-605A36AAF2CC}';

var
  pcap: TPcap;
  i: integer = 0;

begin
  try
    try
      pcap := TPcap.Create;
    except
      on e: EFindAllDevicesException do
        writeln('Interfaces fetching error');
      on e: Exception do
        writeln('Another exception');
    end;

    writeln('Choose interface:');
    for var interfaceItem in pcap.FInterfaces do
    begin
        writeln(interfaceItem.description + '('+IntToIp(interfaceItem.addresses.addr.sin_addr.S_addr) + ')'));
    end;

    readln;
  except
    on e: Exception do
    begin
      writeln(e.ClassName, ': ', e.Message);
      readln;
    end;
  end;

end.
